<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                   
                                    <img src="images/icon/onda_logo.png" width="64" height="64" alt="Cool Admin" /> <strong>ONDA</strong></a>        
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/equipment/add" method="POST">
                                            <input type="text"  hidden  name="Image" value="{{equipment.Image}}" >
                                            <input type="text"  hidden  name="edit" value="edit" >
                                            <input type="text"  hidden  name="Code" value="{{ equipment.Code }}" >
                                            <div class="form-group">
                                                <label class="form-control-label">Photo<span class="optional"> (optionnelle)</span></label>
                                                <input type="file" name="image" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Nom</label>
                                                <input type="text"required name="Name" placeholder="Entrez le Nom" value="{{ equipment.Name }}" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Coût</label>
                                                <input type="number" name="Cost" placeholder="Entrez un Coût" value="{{ equipment.Cost }}" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Date d'arrivée</label>
                                                <input type="date"  name="ArrivalDate" placeholder="Entrez une Date d'arrivée"  value="{{ equipment.ArrivalDate }}"  class="form-control">
                                            </div>

                                            <div class="form-group">
                                                <label class=" form-control-label">Date d'installation</label>
                                                <input type="date" required name="InstallationDate" placeholder="Entrez une Date d'installation" value="{{ equipment.InstallationDate }}" class="form-control">
                                            </div>
                                            
                                             <div class="form-group">
                                                <label class=" form-control-label">Date de garantie</label>
                                                <input type="date"  name="WarrantyDate" placeholder="Entrez une Date de garantie"   value="{{ equipment.WarrantyDate }}"  class="form-control">
                                             </div>
                                             <div class="form-group">
                                                <label class=" form-control-label">Modèle </label>
                                                <input type="text"  name="Model" value="{{ equipment.Model}}" placeholder="Entrez un Numéro de modèle" class="form-control">
                                             </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Numéro de série</label>
                                                <input type="text" name="SerialNumber" value="{{ equipment.SerialNumber }}" placeholder="Entrez un Numéro de série" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Fabricant</label>
                                                <input type="text" required name="Manufacturer" value="{{ equipment.Manufacturer }}" placeholder="Entrez le Fabricant" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">Emplacement</label>
                                                <input type="text" required name="Location" value="{{ equipment.Location }}" placeholder="Entrez l'Emplacement" class="form-control">
                                            </div>
                                            <div class="form-group">
                            <label class=" form-control-label">Code de l'Agent</label>
                            <select name="Agent"required id="select" class="form-control">
                                {{#each Agents}}
                                    <option value="{{this.Id}}">{{this.Name}}  </option>
                                {{/each}}
                            </select>
                                            <div class="form-group">
                            <label class=" form-control-label">Service</label>
                            <select name="Department"required id="select" class="form-control">
                                {{#each Departs}}
                                    <option value="{{this.Name}}">{{this.Name}} </option>
                                {{/each}}
                            </select>
                        </div>
                                            <div class="form-group">
                                                <label class=" form-control-label">PM</label>
                                                <select name="PM"required id="select" class="form-control">
                                                        <option value="Monthly" {{#if M}} selected {{/if}} >Monthly</option>
                                                        <option value="Annualy" {{#if A}} selected {{/if}}>Annualy</option> 

                                                </select>
                                            </div>   
                                            <div class="form-group">
                       <label class="form-control-label">Equipement sous contrat n°</label>
                       <input type="text"  name="Eqcontrat" value="{{ equipment.Eqcontrat }}"  placeholder="Entrez le Contrat" class="form-control">
                   </div>
                   <div class="form-group">
                       <label class="form-control-label">Observation</label>
                      <input type="text"  name="Observation" value="{{ equipment.Observation }}" placeholder="Entrez vos Observations" class="form-control">
                   </div>  
                                            <div class="form-group">
                                                <label class=" form-control-label">Notes</label>
                                                <input type="text"  name="Notes" placeholder="Any Notes" value="{{ equipment.Notes}}" class="form-control">
                                            </div>                                       
                                                            
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">ADD</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>