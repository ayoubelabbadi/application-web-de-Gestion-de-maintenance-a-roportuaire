<div class="main-content">
    <div class="section__content section__content--p30"> 
        <div class="container-fluid">
            <div class="table-data__tool">
                <h2><img src="images/{{image}}" style="height: 50px; width:50px; border-radius: 50%;" > {{#if name}} Nom de l'Équipement: {{ name }} ,Modèle: {{ model}}{{/if}}</h2>
            </div>
            <div class="table-responsive m-b-40">
                <table class="table table-borderless table-data3">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Nbr d’heures Maintenance de réparation</th>
                            <th>Description</th>
                            <!--<th>Code de panne</th>-->
                            <th>Raison de la panne</th>
                            

                        </tr>
                    </thead>
                   {{#if hasMaintenances}} 
                    <tbody>
                     {{#each maintenance}}
                        <tr>
                            <td>{{this.Id}}</td>
                            <td>{{this.StartDate}}</td>
                            <td>{{this.EndDate}}</td>
                            <td>{{this.Duration}}</td>
                            <td>{{this.Description}}</td>
                            <!--<td>{{this.BreakDownCode}}</td>-->
                            <td>{{this.BreakDownReason}}</td>

                        </tr>
                       {{/each}} 
                    </tbody>
                   {{/if}} 
                </table>
            </div>
        </div>
    </div>
</div>
        <!-- END PAGE CONTAINER-->  

