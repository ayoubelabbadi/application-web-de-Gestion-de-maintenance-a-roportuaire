<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                   
                                    <img src="images/icon/onda_logo.png" width="64" height="64" alt="Cool Admin" /> <strong>ONDA</strong></a>        
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/workOrder/add" method="POST">
                                        <input type="text" hidden required name="Code"  placeholder="Nouveau Code" value="{{ workOrder.Code}}" class="form-control">
                                      <div class="form-group">
                                            <label class=" form-control-label">Description</label>
                                            <input type="text" required name="Description"  placeholder="Nouvelle Description" value="{{ workOrder.Description}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de début</label>
                                            <input type="date" required name="StartDATE"  placeholder="New Datee" value="{{ workOrder.StartDate}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de fin</label>
                                            <input type="date" required name="EndDATE"  placeholder="New Datee" value="{{ workOrder.EndDate}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de début & Time</label>
                                            <input type="datetime-local"  required name="AdditionalStartDate" placeholder="Enter Start Date" class="form-control">
                                        </div>
                                        <div class="form-group">
                                         <label class=" form-control-label">Date de fin & Time</label>
                                           <input type="datetime-local"  required name="AdditionalEndDate" placeholder="Enter End Date" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Coût</label>
                                            <input type="text" required name="Cost" placeholder="Nouveau Coût" value="{{ workOrder.Cost}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Code d'Équipement</label>
                                            <input type="text" required name="EquipmentCode" placeholder="Nouveau code d'équipement"  value="{{ workOrder.EquipmentCode }}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Ingénieur/Technicien DSSN</label>
                                            <input type="text"  required name="ClinicalEngineerDSSN" placeholder="Nouveau DSSN" value="{{ workOrder.ClinicalEnginnerDSSN }}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Priorié</label>
                                            <select name="Priority"required id="select"  class="form-control" >
                                                <option value="Low" {{#if workOrder.low}} selected {{/if}}>Low</option>
                                                <option value="Medium" {{#if workOrder.med}} selected {{/if}}>Medium</option>
                                                <option value="High" {{#if workOrder.high}} selected {{/if}}>High</option>
                                            </select>
                                        </div>                                        
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Modifier</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>