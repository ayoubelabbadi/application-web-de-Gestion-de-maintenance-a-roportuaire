<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                    <img src="images/icon/onda_logo.png" width="64" height="64" alt="Cool Admin" /> <strong>ONDA</strong></a>        
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action='/maintenance/add' method="POST">
                                        <input type="text" hidden name="Id" value="{{ maintenance.Id}}">    
                                       <div class="form-group">
                                            <label class=" form-control-label">Code de panne</label>
                                            <input type="text" required name="BreakDownID" placeholder="Entrez le nouveau code " value ="{{maintenance.BreakDownCode}}" class="form-control">
                                        </div>
                                       <div class="form-group">
                                            <label class=" form-control-label">Ingénieur/Technicien DSSN</label>
                                            <input type="text" required name="DSSN" placeholder="Entrez un nouveau Code " value ="{{maintenance.ClinicalEnginnerDSSN}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de début</label>
                                            <input type="date" required name="StartDateNoTime"  placeholder="New Datee" value="{{ maintenance.StartDateNoTime}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de fin</label>
                                            <input type="date" required name="EndDateNoTime"  placeholder="New Datee" value="{{ maintenance.EndDateNoTime}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de début & Time</label>
                                            <input type="datetime-local" required name="StartDate" placeholder="Enter New Start Date " value="{{maintenance.StartDate}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Date de fin & Time</label>
                                            <input type="datetime-local" required name="EndDate" placeholder="Enter New End Date  " value="{{maintenance.EndDate}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Description</label>
                                            <input type="text" required name="Description" placeholder="Entrez une nouvelle Description " value="{{maintenance.Description}}" class="form-control">
                                        </div>              
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Modifier</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>