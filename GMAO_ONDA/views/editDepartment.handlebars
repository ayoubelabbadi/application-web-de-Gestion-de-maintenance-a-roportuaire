<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;">
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                    <img src="images/icon/onda_logo.png" width="64" height="64" alt="Cool Admin" /> <strong>ONDA</strong>
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action='/department/add' method="POST">
                                
                                        <input type="text" hidden name="Code" value="{{department.Code}}">
                                        
                                        <div class="form-group">
                                           <label class=" form-control-label">Code</label>
                                           <input type="text" required name="Code" placeholder="Entrez un Code" value="{{department.Code}}"  class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Nom du département</label>
                                            <input type="text" required name="Name" placeholder="Entrez le nom du département" value="{{department.Name}}" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-control-label">Emplacement</label>
                                            <input type="text" required name="Location" placeholder="Entrez la location" value="{{department.Location}}" class="form-control">
                                        </div>
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Modifier</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>
        </div>
    </div>        
</div>
